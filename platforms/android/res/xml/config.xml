<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mangetout.giveahoy" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="LocationManager">
        <param name="android-package" value="com.unarin.cordova.beacon.LocationManager" />
    </feature>
    <feature name="Globalization">
        <param name="android-package" value="org.apache.cordova.globalization.Globalization" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="BLE">
        <param name="android-package" value="com.evothings.BLE" />
    </feature>
    <feature name="BluetoothStatus">
        <param name="android-package" value="com.twofivefivekb.android.bluetoothstatus.BluetoothStatus" />
    </feature>
    <allow-intent href="market:*" />
    <name>Givahoy</name>
    <description>
        A charity-funding application, making it easier for people to donate to the organisations they care about.
    </description>
    <author email="mangetout@outlook.com" href="http://givahoy.com/">
        Givahoy
    </author>
    <content src="mobile6.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
