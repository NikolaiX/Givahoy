<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mangetout.givahoy" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Givahoy</name>
    <description>
        A charity-funding application, making it easier for people to donate to the organisations they care about.
    </description>
    <author email="mangetout@outlook.com" href="http://givahoy.com/">
        Givahoy
    </author>
    <icon src="www/images/icon.png" />
    <icon density="ldpi" platform="android" src="www/images/icon.png" />
    <icon density="mdpi" platform="android" src="www/images/icon.png" />
    <icon density="hdpi" platform="android" src="www/images/icon.png" />
    <icon density="xhdpi" platform="android" src="www/images/icon.png" />
    <content src="mobile6.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
